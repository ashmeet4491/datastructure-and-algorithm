#include <iostream>

using namespace std;
int power(int n,int m)
{
    if(m==0)
    return 1;

    if(m==1)
    {
       return 2; 
    }
    else
    {
        return power(n,m-1)*n;
    }
}

int main()
{
    int n;
    int m;
    cin>>n;
    cin>>m;
    int power1=power(n,m);
    cout<<power1;
}
