#include <iostream>

using namespace std;
int sum(int num)
{
 if(num==0)
 {
     return 0;
 }
 else
 {
     return sum(num-1)+num;
 }
    
}
int main()
{
    int n;
    cout<<"enter the number";
    cin>>n;
    int tot_sum=sum(n);
    cout<<tot_sum;
}
